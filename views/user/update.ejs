<form class="row g-3 mt-3" action="/user/update" method="POST">
    <input type="hidden" name="oldUsername" value="<%= user.username %>"> <!-- Add this line -->
    <input type="hidden" name="username" value="<%= user.username %>">
    <div class="col-md-6">
        <label for="fullname" class="form-label">Display Name</label>
        <input type="text" class="form-control" id="fullname" name="fullname" value="<%= user.fullname %>" required>
    </div>
    <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <div class="col-md-6">
        <label for="sex" class="form-label">Sex</label>
        <select class="form-control" id="sex" name="sex" required>
            <option value="1" <%= user.sex === 1 ? 'selected' : '' %>>Nam</option>
            <option value="0" <%= user.sex === 0 ? 'selected' : '' %>>Ná»¯</option>
        </select>
    </div>
    <div class="col-md-6">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="<%= user.address %>" required>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Update User</button>
    </div>
</form>
